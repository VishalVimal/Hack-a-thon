# Supabase Configuration
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_KEY=your-service-role-key-here
SUPABASE_ANON_KEY=your-anon-key-here

# JWT Configuration
# IMPORTANT: Change this to a strong random string in production!
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
JWT_SECRET_KEY=change-this-to-a-secure-random-string-in-production

# Frontend Configuration
FRONTEND_URL=http://localhost:5173

# API Configuration
API_HOST=0.0.0.0
API_PORT=8001
ML_API_PORT=8000

# Security Settings
# Maximum file upload size in MB
MAX_UPLOAD_SIZE_MB=10

# Rate limiting (requests per time window)
RATE_LIMIT_REGISTER=5/minute
RATE_LIMIT_LOGIN=10/minute
RATE_LIMIT_PASSWORD_CHANGE=3/hour

# Session Configuration
ACCESS_TOKEN_EXPIRE_MINUTES=1440  # 24 hours
REFRESH_TOKEN_EXPIRE_DAYS=30

# Email Configuration (for future use)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
FROM_EMAIL=noreply@yourapp.com

# Database Configuration (if not using Supabase)
# DATABASE_URL=postgresql://user:password@localhost:5432/recruitment_db

# Environment
ENVIRONMENT=development  # development, staging, production

# Logging
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# Security Features
ENABLE_RATE_LIMITING=true
ENABLE_ACCOUNT_LOCKING=true
FAILED_LOGIN_THRESHOLD=5
ACCOUNT_LOCK_DURATION_MINUTES=30

# PDF Processing
ENABLE_PDF_HASHING=true
ENABLE_DUPLICATE_DETECTION=true
